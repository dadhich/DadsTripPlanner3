<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/colorSurface"> <TextView
    android:id="@+id/textViewDuration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/trip_view_teal_highlight" android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="26 mins" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" /> <TextView
        android:id="@+id/textViewDepartureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_start_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:44 am" />

    <TextView
        android:id="@+id/textViewDepartureLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary_dark"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/textViewDepartureTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewDepartureTime"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewDepartureTime"
        tools:text="Lowe Rd opp James Park" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/trip_view_status_on_time"  app:layout_constraintStart_toStartOf="@id/guideline_start_content"
        app:layout_constraintTop_toBottomOf="@id/textViewDepartureTime"
        android:layout_marginTop="2dp"
        tools:text="On time" />
    <TextView
        android:id="@+id/textViewArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_start_content"
        app:layout_constraintTop_toBottomOf="@id/textViewStatus"
        android:layout_marginTop="8dp"
        tools:text="10:53 am" />

    <TextView
        android:id="@+id/textViewArrivalLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary_dark"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/textViewArrivalTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewArrivalTime"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewArrivalTime"
        tools:text="Hornsby Station" />

    <TextView
        android:id="@+id/textViewTransportModes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/textViewArrivalTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewArrivalLocation"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        tools:text="Train T1, Bus 575" />
</androidx.constraintlayout.widget.ConstraintLayout>